<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
          <h2 class="mb-0 text-center">
            <%= @article.new_record? ? 'Créer un Article' : 'Modifier un Article' %>
          </h2>
        </div>
        <div class="card-body">
          <%= form_with model: @article, local: true, html: { class: "needs-validation", novalidate: true } do |form| %>
            <div class="mb-3">
              <%= form.label :title, "Titre de l'article", class: 'form-label fw-bold' %>
              <%= form.text_field :title, class: 'form-control', required: true, placeholder: "Saisissez le titre" %>
            </div>

            <div class="mb-3">
              <%= form.label :content, "Contenu de l'article", class: 'form-label fw-bold' %>
              <%= form.text_area :content, class: 'form-control', rows: 6, required: true, placeholder: "Écrivez votre article ici..." %>
            </div>

            <div class="text-end">
              <%= form.submit @article.new_record? ? "Publier l'Article" : "Mettre à jour", class: 'btn btn-success' %>
              <%= link_to 'Annuler', articles_path, class: 'btn btn-secondary' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

